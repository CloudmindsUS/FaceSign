<Window x:Class="FaceSign.app.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceSign.app"
        mc:Ignorable="d"
        Title="DebugWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button Margin="10,10,10,10" x:Name="OpenDoor" Click="OpenDoor_Click">开门</Button>
            <Button Margin="10,10,10,10" x:Name="CloseDoor" Click="CloseDoor_Click">关门</Button>
            <Button Margin="10,10,10,10" x:Name="Clear" Click="Clear_Click" >清屏</Button>
        </StackPanel>
        <ScrollViewer Height="377" x:Name="Scroll">
            <Label x:Name="Label"></Label>
        </ScrollViewer>
    </StackPanel>
</Window>
